<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <%- include('includes/navbar.ejs') %>
    <!-- Category Bar Start -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light category-bar ">
        <div class="category-bar">
            <a href="#" class="btn category">Electronics</a>
            <a href="#" class="btn category">Computer Accessories</a>
            <a href="#" class="btn category">Hobbies</a>
            <a href="#" class="btn category">Books</a>
            <a href="#" class="btn category">Mattresses</a>
            <a href="#" class="btn category">Others</a>
        </div>
      </nav>
    <!-- Category Bar End -->
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="products-display">
                        <div class="card" style="width: 17rem;">
                            <div class="card-image">
                                <img class="card-img-top" src="/images/placeholder.png">
                            </div>
                            <div class="card-body">
                            <h5 class="card-title">â‚¹ <%= product.price %></h5>
                            <p class="card-text"><%= product.name %></p>
                            <p class="card-text"><%= product.description %></p>
                            </div>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>
<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
</head>

<body>
   <%- include('includes/navbar.ejs') %>
   <div class="container">
    <div class="wrapper" style="transform: translate(-50%, -50%);">
        <h3>Update Your Add</h3>
      <form action="/modify/<%= product._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group form-element">
          <label for="formGroupExampleInput">Product</label>
          <input type="text" class="form-control" id="formGroupExampleInput" name="name" placeholder="Product Name" value="<%= product.name %>" required>
        </div>
        <div class="form-element form-separate">
          <label class="sr-only" for="inlineFormInputGroup">Price</label>
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">â‚¹</div>
            </div>
            <input type="number" class="form-control" id="inlineFormInputGroup" name="price" placeholder="Price" value="<%= product.price %>" required>
          </div>
        </div>
        <div class="form-group form-element">
          <label for="exampleFormControlTextarea1">Description</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="4" required> <%= product.description %></textarea>
        </div>
        <div class="custom-control custom-switch form-separate">
          <input type="checkbox" class="custom-control-input" id="customSwitch1">
          <label class="custom-control-label" for="customSwitch1">Show my phone number on my ads </label>
        </div>
        <button type="submit" class="btn btn-success">Update Product</button>
      </form>
    </div>  
  </div>
<%- include('includes/end.ejs') %>